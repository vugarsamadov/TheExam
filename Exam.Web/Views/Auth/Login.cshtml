@model LoginVM
@{
    Layout = "_AuthLayout";
}


<div class="login-container">
    @Html.ValidationSummary();
    <form asp-action="Login" class="login-form">
        <h1>Welcome Back</h1>
        <p>Please login to your account</p>

        <div class="input-group">
            <input asp-for="Email" type="email" placeholder="Email" required>
            <span style="color:red" asp-validation-for="Email"></span>
        </div>
        
        <div class="input-group">
            <input asp-for="Password" type="password" id="password" name="password" placeholder="Password" required>
            <span style="color:red" asp-validation-for="Email"></span>
        </div>
        
        <button type="submit">Login</button>
        
        <div class="bottom-text">
            <p>Don't have an account? <a asp-action="Register">Sign Up</a></p>
        </div>
    </form>
</div>